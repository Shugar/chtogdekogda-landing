@import 'nib'

global-reset()

$opensans = 'Open Sans', Arial, sans-serif
    
body
  background-color: #464552
  
.container
  max-width 960px
  position relative
  margin 0 auto
  clearfix()
  
.header
  display: block
  .head
    height: 166px
    .logo
      float: left
      margin-top: 23px
      
    .login
      float: right
      margin-top: 49px
      
    
    .olivki
      position: absolute
      left: 35%
      top: 23px
    p
      position: absolute
      top: 250px
      left: 250px
      
  .center
    position: relative
    height: 1024px
    min-height: 600px
    height: 100vh
    background-color: rgb(255, 69, 53)
    background: url('../images/.png') no-repeat
    background-size: cover
  .social-buttons
    height: 168px